	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<junit.version>4.11</junit.version>
		<spring.boot.version>1.3.0.RELEASE</spring.boot.version>
	    <utils.version>2.0.2-SNAPSHOT</utils.version>
	    <test.version>1.0.0-SNAPSHOT</test.version>
	</properties>

	<scm>
	    <connection>scm:git:https://github.com/tinybrick/integration-zookeeper.git</connection>
	    <developerConnection>scm:git:https://github.com/tinybrick/integration-zookeeper.git</developerConnection>
	</scm>
	
